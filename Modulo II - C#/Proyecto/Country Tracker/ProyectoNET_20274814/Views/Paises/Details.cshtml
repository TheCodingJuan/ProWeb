@model Modelos.PaisModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>PaisModel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NombrePais)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombrePais)
        </dd>

    </dl>
</div>
<div>
    <h4>Departamentos</h4>

    <p>
        @Html.ActionLink("Create New", "../Departamentos/Create", new { id = Model.Id })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Departamentos)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Departamentos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreDepartamento)
                </td>
                <td>
                    @Html.ActionLink("Edit", "../Departamentos/Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "../Departamentos/Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "../Departamentos/Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
